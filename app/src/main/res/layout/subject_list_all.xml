<android.support.v7.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorAccent"
    android:elevation="4dp"
    xmlns:android="http://schemas.android.com/apk/res/android" >

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="7dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvSubjectCode"
            android:text="Subject Code"
            android:layout_marginTop="6dp"
            android:layout_marginLeft="6dp"
            android:textStyle="bold"
            android:textSize="24sp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvSubjectName"
            android:text="Subject Name"
            android:layout_marginLeft="6dp"
            android:layout_below="@id/tvSubjectCode"
            android:textSize="18dp"/>

        <TextView
            android:id="@+id/tvClickEditSubject"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/tvClickDeleteSubject"
            android:layout_alignBottom="@+id/tvClickDeleteSubject"
            android:layout_marginRight="7dp"
            android:layout_toLeftOf="@+id/tvClickDeleteSubject"
            android:layout_toStartOf="@+id/tvClickDeleteSubject"
            android:text="Edit"
            android:textColor="@color/colorPrimary"
            android:textSize="14dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvClickDeleteSubject"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/tvSubjectCode"
            android:text="Delete"
            android:textColor="@color/colorAccent"
            android:textSize="14dp"
            android:textStyle="bold"
            android:layout_marginTop="5dp"
            android:layout_marginRight="6dp"/>


    </RelativeLayout>

</android.support.v7.widget.CardView>