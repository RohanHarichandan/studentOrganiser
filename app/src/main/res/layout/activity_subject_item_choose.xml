<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.amirafwan.student_organizer_v1.appView.subject.SubjectItemChooseActivity">

    <TextView
        android:id="@+id/tvSelectedSubjectCode"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Subject Code here..."
        android:gravity="center"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="5dp"
        android:textSize="15dp"
        android:textStyle="bold"/>

    <ListView
        android:id="@+id/list_item_choose"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_below="@+id/tvSelectedSubjectCode"/>

</RelativeLayout>
